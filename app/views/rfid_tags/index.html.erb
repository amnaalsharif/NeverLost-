<p id="notice"><%= notice %></p>
<div id="blue">
<h1>Listing Rfid Tags</h1>
<h5>Click edit to return Tag</h5>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
<table class="table table-hover">
  <thead>
    <tr>
      
      <th id="tablefont">Tag</th>
      <th id="tablefont">Taken?</th>
      <th id="tablefont">Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rfid_tags.each do |rfid_tag| %>
      <tr>
        <td><%= rfid_tag.tag_id %></td>
        <td><%= rfid_tag.status%></td>
        <td>
          <%= link_to 'Show', rfid_tag, class: 'btn btn-large btn-info' %>
          <%= link_to 'Edit', edit_rfid_tag_path(rfid_tag), class: 'btn btn-large btn-info' %>
          <%= link_to 'Destroy', rfid_tag, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-large btn-info'%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Rfid tag', new_rfid_tag_path, class: 'btn btn-large btn-info' %>
</div>
</div>

</br>
