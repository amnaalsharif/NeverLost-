<div align="left">
  <h3 id="blue">Send A message to Us</h3>

  <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
   <div id="font"> <%= f.input :name, :required => true %> </div>
   <br>
    <div id="font">  <%= f.input :email, :required => true %></div>
       <br>
     <div id="font"> <%= f.input :message, :as => :text, :required => true %></div>
        <br>
    <div class= "hidden">
      <%= f.input :nickname, :hint => 'Leave this field blank!' %> 
    </div>
    <div>
      </br>
      <%= f.button :submit, 'Send message', :class=> "btn btn-large btn-info" %>
    </div>
  <% end %>
</div>