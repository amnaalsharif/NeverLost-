<%= bootstrap_devise_error_messages! %>
<br>
<div class="panel panel-default devise-bs">
  <div class="panel-heading">
    <div id=blue><%= t('.sign_up', :default => "Sign up") %></div>
  </div>
  <div class="panel-body">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { role: "form" }) do |f| %>
      <div class="form-group">
       <div id="tablefont"> <%= f.label :email %> </div>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
      <div id="tablefont">  <%= f.label :name %> </div>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
    <div id="tablefont">    <%= f.label :phone %> </div>
        <%= f.text_field :phone, class: "form-control" %>
      </div>
      <div class="form-group">
    <div id="tablefont">    <%= f.label :password %> </div>
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <div class="form-group">
    <div id="tablefont">    <%= f.label :password_confirmation %> </div>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
      <%= f.submit t('.sign_up', :default => "Sign up"), class: "btn btn-large btn-info" %>
    <% end %>
  </div>
</div>
<%= render "devise/shared/links" %>
