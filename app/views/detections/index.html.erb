<p id="notice"><%= notice %></p>


<h1>Listing Detections</h1>
<%= form_tag detections_path, :method => 'get' do %>
<p>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", :phone => nil %>
</p>
<% end %>
<div class="table-responsive">

<table class="table table-hover">
  <thred>
      <tr>
        <th id= "tablefont">Tag</th>
        <th id= "tablefont">Sensor</th>
        <th id= "tablefont">Time</th>
        <th id= "tablefont">Phone</th>
         <th id= "tablefont">Actions</th>
      </tr>
  </thread>
  <tbody>
    <% @detections.each do |detection| %>
      <tr>
        <td><%= detection.tag_id %></td>
        <td><%= detection.sensor_id %></td>
        <td><%= detection.time %></td>
        <td>
          <% lendings = detection.rfid_tag.lendings %>
            <%  lendings.each do |l| %>
              <%= l.user.phone %>
            <% end %>
          </td>
        <td>
          <%= link_to 'Show', detection,class: 'btn btn-large btn-info' %>
          <%= link_to 'Edit', edit_detection_path(detection),class: 'btn btn-large btn-info' %>
          <%= link_to 'Destroy', detection, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-large btn-info' %>
        </td>
      </tr>
      <% end %>
  </tbody>
    
  </table>
  </div>



<br>

